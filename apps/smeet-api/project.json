{
  "name": "smeet-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/smeet-api/src",
  "targets": {
    "serve": {
      "executor": "@ns3/nx-serverless:sls",
      "options": {
        "command": "offline"
      }
    },
    "package": {
      "executor": "@ns3/nx-serverless:sls",
      "outputs": [
        "apps/smeet-api/.serverless",
        "dist/apps/smeet-api"
      ],
      "dependsOn": [
        "^build"
      ],
      "options": {
        "command": "package"
      }
    },
    "deploy": {
      "executor": "@ns3/nx-serverless:sls",
      "outputs": [
        "apps/smeet-api/.serverless",
        "dist/apps/smeet-api"
      ],
      "dependsOn": [
        {
          "target": "package",
          "projects": "self",
          "params": "forward"
        }
      ],
      "options": {
        "command": "deploy",
        "package": ".serverless"
      }
    },
    "remove": {
      "executor": "@ns3/nx-serverless:sls",
      "options": {
        "command": "remove"
      }
    },
    "sls": {
      "executor": "@ns3/nx-serverless:sls",
      "options": {}
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/smeet-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/smeet-api/src/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}
